<Window x:Class="CyberChatbot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        Title="Cybersecurity Chatbot" Height="500" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Cybersecurity Chatbot" FontSize="24"
                   HorizontalAlignment="Center" Margin="10"/>

        <ListBox x:Name="ChatHistory" Grid.Row="1" Margin="10"/>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="10">
            <TextBox x:Name="UserInput" Width="500" Height="30"/>
            <Button Content="Send" Click="Send_Click" Width="100" Margin="5"/>
            <Button Content="Tasks" Click="OpenTasks_Click" Width="80"/>
            <Button Content="Quiz" Click="OpenQuiz_Click" Width="80"/>
            <Button Content="Log" Click="OpenLog_Click" Width="80"/>
        </StackPanel>
    </Grid>
</Window>
